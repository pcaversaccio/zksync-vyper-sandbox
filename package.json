{
  "name": "zksync-vyper-sandbox",
  "version": "1.0.0",
  "description": "A sandbox environment for ZKsync Era Vyper compiler testing.",
  "keywords": [
    "compiler",
    "testing",
    "vyper",
    "zksync-era"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pcaversaccio/zksync-vyper-sandbox.git"
  },
  "homepage": "https://github.com/pcaversaccio/zksync-vyper-sandbox#readme",
  "bugs": {
    "url": "https://github.com/pcaversaccio/zksync-vyper-sandbox/issues"
  },
  "author": "pcaversaccio",
  "license": "MIT",
  "packageManager": "pnpm@10.29.3",
  "scripts": {
    "compile": "hardhat compile",
    "vars:path": "hardhat vars path",
    "deploy:zksynclocal": "hardhat deploy-zksync --network zkSyncLocal --script deploy-zksync.ts",
    "deploy:zksynctestnet": "hardhat deploy-zksync --network zkSyncTestnet --script deploy-zksync.ts",
    "deploy:zksyncmain": "hardhat deploy-zksync --network zkSyncMain --script deploy-zksync.ts",
    "prettier:check": "prettier -c \"**/*.{js,ts,md,sol,json,yml,yaml}\"",
    "prettier:fix": "prettier -w \"**/*.{js,ts,md,sol,json,yml,yaml}\"",
    "solhint:check": "solhint \"contracts/solidity/**/*.sol\"",
    "solhint:fix": "solhint \"contracts/solidity/**/*.sol\" --fix",
    "lint:check": "pnpm prettier:check && pnpm solhint:check && eslint .",
    "lint:fix": "pnpm prettier:fix && pnpm solhint:fix && eslint . --fix"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@matterlabs/hardhat-zksync-deploy": "^1.8.0",
    "@matterlabs/hardhat-zksync-ethers": "^1.4.0",
    "@matterlabs/hardhat-zksync-solc": "^1.5.1",
    "@matterlabs/hardhat-zksync-verify": "^1.9.1",
    "@matterlabs/hardhat-zksync-verify-vyper": "0.2.0-alpha.6",
    "@matterlabs/hardhat-zksync-vyper": "^1.4.0",
    "@nomicfoundation/hardhat-ethers": "^3.1.3",
    "@nomicfoundation/hardhat-verify": "^2.1.3",
    "@nomiclabs/hardhat-vyper": "^3.1.0",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "eslint": "^10.0.0",
    "eslint-config-prettier": "^10.1.8",
    "ethers": "^6.16.0",
    "globals": "^17.3.0",
    "hardhat": "^2.28.6",
    "prettier": "^3.8.1",
    "prettier-plugin-solidity": "^2.2.1",
    "solhint": "^6.0.3",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.0",
    "zksync-ethers": "^6.21.1"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "cpu-features",
      "keccak",
      "protobufjs",
      "secp256k1",
      "ssh2"
    ]
  }
}
